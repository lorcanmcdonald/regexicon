                , bytestring
                , data-default
                , delay
                , extra
                , lens
                , parsec
                , pretty-simple
                , range
                , regex-pcre
                , string-conv
                , tasty >= 0.10.1
                , tasty-hunit
                , tasty-quickcheck
                , text
                , unordered-containers
                , vector
